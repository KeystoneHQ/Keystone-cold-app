<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="coin"
            type="com.keystone.cold.db.viewmodel.CoinModel" />

        <variable
            name="callback"
            type="com.keystone.cold.ui.fragment.main.CoinClickCallback" />

        <variable
            name="isManage"
            type="boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="@{()->callback.onClick(coin)}"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="14dp"
            app:icon="@{coin.coinCode}"
            tools:src="@drawable/coin_btc"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/coinCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{coin.displayName}"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="BTC" />

                <TextView
                    android:layout_marginStart="12dp"
                    visibleGone="@{coin.hasTag()}"
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{coin.tag}"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_color_text_bg"
                    tools:text="Native Segwit" />
            </LinearLayout>


            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Bitcoin"
                android:textSize="12sp"
                android:textColor="@color/white40"
                visibleGone="@{isManage}"
                android:text="@{coin.name}" />

        </LinearLayout>


        <TextView
            android:id="@+id/addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:text="@string/addr"
            android:textColor="#4d4d4d"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addr_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/addr"
            android:text="@{String.valueOf(coin.addressCount)}"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatCheckBox
            visibleGone="@{isManage}"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:button="@drawable/checkbox"
            android:checked="@{coin.show}"
            android:clickable="false" />

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</layout>