<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isEdit"
            type="boolean" />

        <variable
            name="item"
            type="com.keystone.cold.db.entity.WhiteListEntity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/close"
            android:tint="@color/red"
            app:visibleGone="@{isEdit}"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/v"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/delete" />

        <TextView
            android:id="@+id/addr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_above="@id/v"
            android:layout_toEndOf="@id/delete"
            android:text="@{item.addrName}"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="addr1" />

        <TextView
            android:id="@+id/addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v"
            android:layout_alignStart="@id/addr_name"
            android:layout_marginEnd="40dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/white40"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="addr1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:icon="@{item.coinCode}"
            tools:src="@drawable/coin_eth"
            tools:ignore="ContentDescription" />

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>