<com.keystone.cold.ui.views.StatusBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/passphrase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/passphrase_title"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/percentage_text"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:gravity="end"
        android:textColor="@color/text"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <com.keystone.cold.ui.views.BatteryView
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="8dp" />
</com.keystone.cold.ui.views.StatusBarView>