<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="input"
            type="androidx.databinding.ObservableField&lt;String>" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@drawable/modal_bg">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="9dp"
                android:src="@drawable/close"
                android:tint="@color/colorAccent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.keystone.cold.ui.views.MenuHidingEditText
                android:id="@+id/input_box"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/title"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/password_input_bg"
                android:text="@={input}"
                android:paddingHorizontal="12dp"
                android:singleLine="true"
                android:textColor="#8F95AA"
                tools:ignore="LabelFor"
                android:importantForAutofill="no"
                android:inputType="text" />

            <Button
                android:id="@+id/confirm"
                style="@style/AcceptButton"
                android:layout_width="match_parent"
                android:layout_below="@id/input_box"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:singleLine="true"
                android:enabled="@{input.length >= 1}"
                android:text="@string/confirm" />

        </RelativeLayout>

    </FrameLayout>
</layout>