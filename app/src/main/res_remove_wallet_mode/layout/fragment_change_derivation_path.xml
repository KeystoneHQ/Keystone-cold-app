<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/arrow_left"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/changePath"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivConfirm"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@drawable/ic_confirm" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/changePathText"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:text="@string/change_path_sub_text"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/pattern_card_1"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_derivation_path_selected"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/derivation_pattern_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m/44'/60'/0'/0/*"
                                android:textColor="@color/white" />
                            <TextView
                                android:textColor="@color/primary"
                                android:id="@+id/derivation_pattern_tag_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/bg_derivation_path_recommended"
                            android:text="Recommended"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/address_list_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <include layout="@layout/divider" />

                    <com.keystone.cold.remove_wallet_mode.ui.views.ExpandableTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_10"
                        app:collapsedLines="1"
                        app:isExpanded="false"
                        app:text="@string/eth_standard_path" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pattern_card_2"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_derivation_path_unselected"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/derivation_pattern_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m/44'/60'/0'/0/*"
                                android:textColor="@color/white" />
                            <TextView
                                android:textColor="@color/primary"
                                android:id="@+id/derivation_pattern_tag_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/address_list_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <include layout="@layout/divider" />

                    <com.keystone.cold.remove_wallet_mode.ui.views.ExpandableTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_10"
                        app:collapsedLines="1"
                        app:isExpanded="false"
                        app:text="@string/eth_standard_path" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pattern_card_3"
                    android:layout_marginVertical="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_derivation_path_unselected"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/derivation_pattern_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m/44'/60'/0'/0/*"
                                android:textColor="@color/white" />

                            <TextView
                                android:textColor="@color/primary"
                                android:id="@+id/derivation_pattern_tag_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/address_list_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <include layout="@layout/divider" />

                    <com.keystone.cold.remove_wallet_mode.ui.views.ExpandableTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_10"
                        app:collapsedLines="1"
                        app:isExpanded="false"
                        app:text="@string/eth_standard_path" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>