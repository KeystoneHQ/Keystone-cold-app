<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.keystone.cold.remove_wallet_mode.ui.adapter.SelectedAddressAdapter.AddressCallback" />

        <variable
            name="clickableItem"
            type="com.keystone.cold.remove_wallet_mode.ui.model.ClickableItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:onClick="@{()->callback.onClick(clickableItem)}"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:src="@{clickableItem.iconResId}"
                android:visibility="@{clickableItem.iconVisibility()}"
                tools:src="@drawable/coin_dot" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:importantForAutofill="no"
                android:singleLine="true"
                android:text="@{networkItem.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                tools:text="Polkadot" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/arrow_right" />


        </LinearLayout>

        <include
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</layout>